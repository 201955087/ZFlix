<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/favorite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심매물"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- 새로고침 아이콘 -->
    <ImageButton
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/favorite_title"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_refresh"
        android:contentDescription="새로고침" />

    <!-- 즐겨찾기 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorite_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/favorite_title"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- 로딩 표시 -->
    <ProgressBar
        android:id="@+id/favorite_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- 비어 있을 때 문구 -->
    <TextView
        android:id="@+id/favorite_empty_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 즐겨찾기한 매물이 없습니다."
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
