<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:title="전체 필터"
        android:titleTextColor="@android:color/black"
        app:navigationIcon="@drawable/ic_arrow_back_black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역구"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_light"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    style="@style/Widget.AppCompat.Spinner" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="법정동"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_light"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_legal_dong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:spinnerMode="dropdown"
                    style="@style/Widget.AppCompat.Spinner" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_light"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보증금 (만원)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_light"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_deposit_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0 ~ 50,000만원"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/slider_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="50000.0"
                    app:values="@array/default_deposit_range"
                    android:stepSize="100.0"
                    app:labelBehavior="gone"
                    app:trackColorInactive="@color/grey_light"
                    app:trackColorActive="?attr/colorPrimary"
                    app:thumbColor="?attr/colorPrimary"
                    android:layout_marginBottom="16dp" /> <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월세 (만원)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black_light"
                android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_monthly_rent_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0 ~ 500만원"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/slider_monthly_rent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="500.0"
                    app:values="@array/default_monthly_rent_range"
                    android:stepSize="10.0"
                    app:labelBehavior="gone"
                    app:trackColorInactive="@color/grey_light"
                    app:trackColorActive="?attr/colorPrimary"
                    app:thumbColor="?attr/colorPrimary"
                    android:layout_marginBottom="16dp" /> <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전용면적 (m²)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black_light"
                android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_net_area_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0 ~ 200m²"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/slider_net_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="200.0"
                    app:values="@array/default_net_area_range"
                    android:stepSize="1.0"
                    app:labelBehavior="gone"
                    app:trackColorInactive="@color/grey_light"
                    app:trackColorActive="?attr/colorPrimary"
                    app:thumbColor="?attr/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/grey_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내부 시설 (중복 선택 가능)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_light"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/interior_facilities_checkbox_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_apply_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimary"
        android:text="필터 적용"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp" />

</LinearLayout>